{
  "manifest_version": 3,
  "name": "Panel of Testers",
  "version": "0.1.0",
  "description": "Agentic test panel providing voice feedback.",
  "permissions": ["activeTab", "scripting", "tabs", "storage", "offscreen"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Panel of Testers"
  },
  "web_accessible_resources": [
    {
      "resources": ["offscreen.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
