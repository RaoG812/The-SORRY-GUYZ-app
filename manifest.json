{
  "manifest_version": 3,
  "name": "Panel of Testers",
  "version": "0.1.0",
  "description": "Agentic app tester with voice feedback (Static / Flow / Live).",
  "permissions": ["activeTab", "scripting", "tabCapture", "storage", "offscreen"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js", "type": "module" },
  "action": { "default_title": "Panel of Testers" },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "icons": { "16": "icons/16.png", "32": "icons/32.png", "128": "icons/128.png" }
}
